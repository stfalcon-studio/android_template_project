<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">

    <layer-list>
        <item android:right="25dp">
            <shape android:shape="rectangle">
                <solid android:color="#E7E7E7" />
                <size
                    android:width="25dp"
                    android:height="25dp" />
                <corners
                    android:bottomLeftRadius="25dp"
                    android:topLeftRadius="25dp" />
            </shape>
        </item>

        <item android:left="25dp">
            <shape android:shape="rectangle">
                <gradient
                    android:centerY="0.50"
                    android:startColor="#E8EBEF"
                    android:centerColor="#A3B1BF"
                    android:endColor="#657584"
                    android:type="sweep"
                    android:useLevel="false" />
                <size
                    android:width="25dp"
                    android:height="25dp" />
                <corners
                    android:bottomRightRadius="25dp"
                    android:topRightRadius="25dp" />
            </shape>
        </item>

        <item android:top="25dp">
            <shape android:shape="rectangle">
                <solid android:color="#E7E7E7" />
                <size
                    android:width="25dp"
                    android:height="25dp" />
                <corners
                    android:bottomLeftRadius="25dp"
                    android:bottomRightRadius="25dp" />
            </shape>
        </item>

        <item
            android:right="25dp"
            android:top="25dp">
            <shape android:shape="rectangle">
                <solid android:color="#E7E7E7" />
                <size
                    android:width="25dp"
                    android:height="25dp" />
                <corners android:bottomLeftRadius="25dp" />
            </shape>
        </item>

        <item android:gravity="center">
            <shape android:shape="oval">
                <size
                    android:width="41dp"
                    android:height="41dp" />
                <solid android:color="#FFFFFF" />
            </shape>
        </item>

    </layer-list>
</rotate>
