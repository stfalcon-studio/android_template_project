<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SampleApp" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Title" parent="Text"/>

    <style name="Body" parent="Text"/>

    <style name="Title.Large" parent="Title">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Title.Medium" parent="Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Body.Large" parent="Body">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body.Medium" parent="Body">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body.Small" parent="Body">
        <item name="android:textSize">12sp</item>
    </style>
</resources>